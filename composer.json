{
    "version": "1.0.1",

    "type": "project",

    "license": "proprietary",

    "require": {

        "php": "^8.1",
        "laravel/framework": "^10.3",
        "laravel/octane": "^2.5",
        "laravel/pulse": "^1.2",

        "tripteki/laravelphp-import-export": "^1.0",
        "tripteki/laravelphp-request-response-query": "^1.0",
        "spatie/laravel-data": "^4.11",
        "darkaonline/l5-swagger": "^8.6",
        "tymon/jwt-auth": "^2.1",
        "filament/filament": "^3.2",
        "bezhansalleh/filament-language-switch": "^3.1",
        "inertiajs/inertia-laravel": "^2.0",
        "tightenco/ziggy": "^2.4",

        "guzzlehttp/guzzle": "^7.10"
    },

    "require-dev": {

        "phpunit/phpunit": "^10.5.60",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",

        "laravel/tinker": "^2.10",
        "nunomaduro/collision": "^7.12"
    },

    "autoload": {

        "psr-4": {

            "Src\\": "src/",
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },

    "autoload-dev": {

        "psr-4": {

            "Tests\\": "tests/"
        }
    },

    "scripts": {

        "dev": [

            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185\" \"php artisan octane:start --watch\" \"php artisan queue:work\" \"php artisan schedule:work\" \"npm run dev\" --names=server,queue,vite"
        ],

        "build": [

            "npm run production"
        ],


        "test": [

            "./vendor/bin/phpunit --testsuite Unit,Integration,Feature,ModuleUnit,ModuleIntegration,ModuleFeature"
        ],

        "e2e": [

            "./vendor/bin/phpunit --testsuite E2E,ModuleE2E"
        ],

        "start": [

            "nohup bash -c 'php artisan inertia:start-ssr & php artisan octane:start --watch & php artisan queue:work & php artisan schedule:work' > ./storage/logs/run.log 2>&1 &"
        ],

        "stop": [

            "pkill -f 'php artisan inertia:start-ssr' || true",
            "pkill -f 'php artisan octane:start' || true",
            "pkill -f 'php artisan queue:work' || true",
            "pkill -f 'php artisan schedule:work' || true"
        ],

        "post-autoload-dump": [

            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },

    "extra": {

        "laravel": {

            "dont-discover": []
        }
    },

    "config": { "preferred-install": "dist", "sort-packages": true, "optimize-autoloader": true, "allow-plugins": { "pestphp/pest-plugin": true, "php-http/discovery": true } }, "minimum-stability": "stable", "prefer-stable": true
}
