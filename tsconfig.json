{
    "compilerOptions": {

        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",

        "paths": {

            "@/*": ["./resources/js/*"]
        }
    },

    "include": [

        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.ts",
        "resources/js/**/*.js"
    ]
}
